<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidApp.virusGame">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.SettingsActivity"></activity>
        <activity android:name=".UI.LoseActivity" />
        <activity android:name=".UI.WinActivity" />
        <activity android:name=".UI.WebActivity" />
        <activity android:name=".UI.ProfileActivity" />
        <activity android:name=".UI.HomeActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />

        <activity android:name=".UI.ChangePasswordActivity" />
        <activity android:name=".UI.LoginActivity" />
        <activity android:name=".UI.MaskCheckActivity" />
        <activity android:name=".UI.PlayerAccountActivity" />
        <activity android:name=".UI.MapActivity" />
        <activity android:name=".UI.GameActivity"
            android:configChanges="orientation|screenSize"
            />
        <activity android:name=".UI.HomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>