<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/location_preferences_header">
        <SwitchPreferenceCompat
            app:key="location_permission"
            app:summaryOff="@string/location_summary_off"
            app:summaryOn="@string/location_summary_on"
            app:title="@string/location_permission"
            app:defaultValue="false"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sound_preferences_header">

        <SwitchPreferenceCompat
            app:key="sound_effects_on"
            app:title="@string/sound_effects_on"
            />

    </PreferenceCategory>


</PreferenceScreen>